[Unit]
Description={{ description }}
Documentation={{ documentation }}
Wants=basic.target
After=network.target remote-fs.target

[Service]
Type=simple
User={{ user }}
Group={{ group }}
WorkingDirectory={{ home }}
EnvironmentFile={{ default }}
ExecStart={{ exec }} $ARGS
ExecStop={{ exec_stop }}
SuccessExitStatus=143

#Restart=on-failure

[Install]
WantedBy=multi-user.target
